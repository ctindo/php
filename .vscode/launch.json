        },
        
        
        



        {
            "name": "Launch built-in server and Debug",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "port": 9000
        },
        {
            "name": "Launch built-in server and Profile",
            "type": "php",
            "request": "launch",
            "noDebug": true,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}/.",
            "serverReadyAction": {
                "action": "openExternally"
            },
            "profile": true,
            "openProfile": true
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch"
        }
    ]
